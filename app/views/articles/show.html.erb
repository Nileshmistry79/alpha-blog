<h2 align="center"> TITLE : <%= @article.title%></h2>


<div class="well col-xs-8 col-xs-offset-2">
  <h4 align="center description"> <strong>Description : </strong></h4>
  <hr>
  <%=simple_format(@article.desc) %>



<div class="article-actions">
  <%= link_to "<<Back to List", articles_path, class: "btn btn-xs btn-primary"%>
  <%= link_to "EDIT", edit_article_path(@article), class: "btn btn-xs btn-success"%> 
  <%= link_to "Delete", article_path(@article), class: "btn btn-xs btn-danger",method: :delete, data: {confirm: "Are you Sure you want to delete"} %>
</div>
</div>