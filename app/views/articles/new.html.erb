<h1>Create new Articles</h1>

<% if @article.errors.any? %>
<h2>following errors not allowing to create</h2>
<ul>
  <%  @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %>  </li>
  <% end %>
</ul>

<% end %>


<%= form_for @article do |f| %>

<p>
  <%=f.label :title  %> <br/>
  <%=f.text_field :title  %>
</p>

<p>
  <%=f.label :desc  %> <br/>
  <%=f.text_area :desc  %>
</p>


<%= f.submit %> 




<% end %>